public class number {
    public static int power(int n, int x){

        if (n==0){
            return 1; 
        }
        else{
            return x* power(n-1,x);
        }
    }
    public static void main(String[]args){
        int n=2;
        int x=3; 
        int result= power(x,n);
        System.out.println(result);
    }
    
}


