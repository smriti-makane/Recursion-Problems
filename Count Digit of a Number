public class DigitCounter {
    public static void main(String[] args) { 
        int number = 12345;  
        int count = countDigits(number);
        System.out.println("Number of digits: " + count);
    }
 
    public static int countDigits(int n) {
       
        n = Math.abs(n);
    
        if (n == 0) {
            return 0;
        }
        return 1 + countDigits(n / 10);
    }
}
